{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
   "Routes": {
     "route1" : {
       "ClusterId": "cluster1",
       "Match": {
         "Path": "/cartas/{**catch-all}"
       },
       "Transform":[
        {"PathRemovePrefix":"/cartas"}
       ]
     },
     "route2" :{
      "ClusterId" : "cluster2",
      "Match" : {
        "Path" : "/barajas/{**catch-all}"
      },
      "Transform":[
        {"PathRemovePrefix":"/barajas"}
       ]
     }
   },
   "Clusters": {
     "cluster1": {
       "Destinations": {
         "cartaAPI": {
           "Address": "http://cartas-services:8080/"
         }
       }
     },
     "cluster2" : {
      "Destinations":{
        "barajaAPI":{
          "Address" : "http://barajas-services:8080/"
        }
      }
     }
   }
 }
}
